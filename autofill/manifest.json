{
  "manifest_version": 3,
  "name": "JSON AutoFill Gal",
  "version": "1.0.0",
  "description": "Manage Autofill profiles via me.json and auto-fill forms.",
  "action": { "default_title": "JSON AutoFill Gal", "default_popup": "popup/popup.html" },
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    { "matches": ["<all_urls>"], "js": ["content.js"], "run_at": "document_idle" }
  ]
}
